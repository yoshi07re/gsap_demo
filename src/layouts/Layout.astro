---
import "@fontsource/noto-sans-jp";
import "@fontsource/yakuhanjp";
import "ress";

import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  html {
    height: 100%;
    scroll-behavior: initial;
  }

  body {
    position: relative;
    height: 100%;
    font-family: "YakuHanJP", "Noto Sans JP", sans-serif, 游ゴシック体;
    font-size: 16px;
    letter-spacing: 0.12em;
    line-height: 1.6;
    background-color: #f2ebeb;
    color: #313131;
    font-weight: normal;
    overflow-x: hidden;
  }

  html,
  body {
    min-height: 100%;
    height: auto;
  }

  img {
    display: block;
    width: 100%;
    height: auto;
    margin-right: auto;
    margin-left: auto;
  }

  li {
    list-style: none;
  }

  code {
    font-family: "YakuHanJP", "Noto Sans JP", sans-serif, 游ゴシック体;
  }
</style>

<script is:inline src="https://cdn.jsdelivr.net/gh/studio-freight/lenis@0.2.28/bundled/lenis.js"></script>
<script is:inline>
  const lenis = new Lenis({
    duration: 2.8,
    easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)), // https://www.desmos.com/calculator/brs54l4xou
    direction: "vertical", // vertical, horizontal
    gestureDirection: "vertical", // vertical, horizontal, both
    smooth: true,
    mouseMultiplier: 1,
    smoothTouch: false,
    touchMultiplier: 2,
    infinite: false,
  });

  function raf(time) {
    lenis.raf(time);
    requestAnimationFrame(raf);
  }

  requestAnimationFrame(raf);
</script>
