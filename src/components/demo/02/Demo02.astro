---
import Demo02 from "./Demo02.md";
---

<div class="js-fade">
  <h2 class="heading">フェードインアニメーション</h2>
  <div class="cont sample">
    <div class="item"></div>
    <div class="item"></div>
    <div class="item"></div>
    <div class="item"></div>
  </div>
</div>

<div class="md">
  <Demo02 />
</div>

<style lang="scss">
  .sample {
    display: flex;
    gap: 40px;
    align-items: center;
    flex-wrap: wrap;
    justify-content: center;

    .item {
      width: 200px;
      height: 200px;
      background-color: #333;
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  gsap.utils.toArray<HTMLElement>(".js-fade").forEach((item) => {
    gsap.from(item, {
      y: 10,
      opacity: 0,
      duration: 0.6,
      scrollTrigger: {
        trigger: item,
        start: "top 75%",
        toggleActions: "play none none reverse",
        markers: true,
      },
    });
  });
</script>
